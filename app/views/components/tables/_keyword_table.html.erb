<div class="<%=styling[:parent_wrapper]%> p-5 my-5">
  <h2 class="font-medium text-3xl text-left"><%=table_config[:title]%></h2>
  <%= render partial: "/components/buttons/search_button"%>
  <% if (scroll_class = styling[:table_scroll_behavior]) %>
    <div class="<%= scroll_class %>">
  <% end %>
  <table class="text-ellipsis w-1/1">
    <thead>
      <tr>
        <% table_config[:columns].each do | name | %>
        <th class="p-1  <%=styling[:table_header_styling] ? styling[:table_header_styling] : nil%>"><%=name%></th>
        <%end%>
      </tr>
    </thead>
    <tbody class="p-5">
    <% entries.each_with_index do |entry, index| %>
      <%= render partial: "components/tables/table_row", locals: {
        entry: entry,
        index: index,
        current_page: current_page,
        styling: styling,
        includes: defined?(includes) ? includes : {}
      } %>
    <% end %>
      <% remaining_rows = 10 - @keywords.size %>
      <% remaining_rows.times do %>
        <tr class="opacity-0">
          <td colspan="3">&nbsp;</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%if styling[:table_scroll_behavior]%>
  </div>
  <%end%>
