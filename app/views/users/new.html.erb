<%= form_with model: @user, url: users_path, multipart: true, class: "max-w-xl mx-auto my-20 p-10 bg-white rounded", data: { controller: "modals", action: "turbo:submit-start->modals#open" } do |form| %>
<h2 class="text-2xl font-bold mb-6">New User</h2>
<% if  @user.errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
    <h2 class="font-bold mb-2">Please fix the following errors:</h2>
    <ul>
      <%  @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="mb-4">
    <%= form.label :email_address, class: "block text-sm font-medium text-gray-700 mb-1"  %>
    <%= form.text_field :email_address, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <div class="mb-4">
    <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-1"  %>
    <%= form.text_field :password, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  
  
   <!-- Submit -->
  <div class="text-center">
    <%= form.submit "Submit", class: "bg-zinc-400 hover:bg-zinc-500 text-white font-semibold px-6 py-2 rounded w-full" %>
  </div>

<% end %>
